<local:CWindow x:Class="LoadByText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuildApp"
        x:TypeArguments="local:LoadByTextData"
        mc:Ignorable="d"
        Title="Load By Text" Width="500" Height="300">
    <Grid>
        <TextBox Name="loader" Text="{Binding Text}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
        <Button Content="Ok" Padding="24,4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,8,8" Click="Ok"/>
    </Grid>
</local:CWindow>
